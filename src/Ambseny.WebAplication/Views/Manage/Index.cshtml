@model IEnumerable<Ambseny.WebAplication.Models.Users.EasyUserProfile>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "UserClaims";
}

<h1>UserClaims</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManageUserStatus)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManageUserStatus)
                </td>
                <td>
                    @if ((await AuthorizationService.AuthorizeAsync(User, "UserReviewer")).Succeeded)
                    {
                        @Html.ActionLink("Profile", "Index", "Profile", new { id = item.Id })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
