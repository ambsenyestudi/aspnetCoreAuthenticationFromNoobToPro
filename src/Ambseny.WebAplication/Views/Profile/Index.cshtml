@model Ambseny.WebAplication.Models.Users.EasyUserIdentity

@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Index";
}

<h1>Profile</h1>

<div>
    <div class="row">
        <div class="d-inline p-2">
            <h4>@Html.DisplayNameFor(model => model.Name)</h4>
        </div>
        <div class="d-inline p-2">
            <h4>@Html.DisplayFor(model => model.Name)</h4>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Identity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Identity)
        </dd>
        @if ((await AuthorizationService.AuthorizeAsync(User, "UserEditor")).Succeeded)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Claim)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Claim)
            </dd>
        }

    </dl>
</div>
@if ((await AuthorizationService.AuthorizeAsync(User, "UserEditor")).Succeeded)
{
<div>
    @Html.ActionLink("Edit", "Edit", "Manage", new { id = Model.Id }) |
    @Html.ActionLink("Back to Claims", "Index", "Manage", new { id = Model.Id })
</div>
}
